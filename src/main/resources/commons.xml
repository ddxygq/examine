<?xml version="1.0" encoding="UTF-8"  standalone="yes"?>
<root>
    <!-- kafka -->
    <kafka>
        <ip>slave3.hadoop</ip>
        <port>9092</port>
        <zookeeper>slave3.hadoop:2181</zookeeper>
    </kafka>
    <!-- mysql -->
    <mysql>
        <url>jdbc:mysql://localhost:3306/examine?characterEncoding=UTF-8</url>
        <username>root</username>
        <passwd>123456</passwd>
    </mysql>
    <!-- spark -->
    <spark>
        <streammaster>local[2]</streammaster>
        <streamname>examinestream</streamname>
        <seconds>10</seconds>
        <sqlmaster>local</sqlmaster>
        <sqlname>examinesql</sqlname>
    </spark>

    <!--file path-->
    <path>
        <localpath>D:\logs\result</localpath>
        <hdfspath>/examine/result</hdfspath>
    </path>
</root>